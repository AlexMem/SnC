<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".ui.lock.LockFragment"
                                                   android:id="@+id/constraintLayout" android:background="#BF000000"
                                                   android:visibility="visible">
    <ImageView
            android:src="@android:drawable/ic_lock_lock"
            android:layout_width="148dp"
            android:layout_height="143dp" android:id="@+id/lockPic"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="189dp"
            android:layout_marginTop="62dp" app:layout_constraintTop_toBottomOf="@+id/lockText"
            android:layout_marginEnd="190dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" app:tint="#BABABA"
            android:scaleX="1.25" android:scaleY="1.25"/>
    <TextView
            android:text="@string/lock_text"
            android:layout_width="274dp"
            android:layout_height="wrap_content" android:id="@+id/lockText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="498dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            android:textSize="24sp" app:layout_constraintVertical_bias="1.0" android:textAlignment="center"
            android:textColor="#FFFFFF"/>
</androidx.constraintlayout.widget.ConstraintLayout>